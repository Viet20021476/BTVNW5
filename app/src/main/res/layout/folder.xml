<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_folder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_folder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Đây là tên của folder"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_folder"
        app:layout_constraintLeft_toRightOf="@id/iv_folder"
        app:layout_constraintRight_toLeftOf="@id/iv_pencil"
        app:layout_constraintTop_toTopOf="@id/iv_pencil"

        />


    <ImageView
        android:id="@+id/iv_pencil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/icon_pencil"
        app:layout_constraintBottom_toBottomOf="@id/iv_folder"
        app:layout_constraintLeft_toRightOf="@id/tv_folder_name"
        app:layout_constraintRight_toLeftOf="@id/iv_cross"
        app:layout_constraintTop_toTopOf="@id/iv_folder" />

    <ImageView
        android:id="@+id/iv_cross"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_cross"
        app:layout_constraintBottom_toBottomOf="@id/iv_folder"
        app:layout_constraintLeft_toRightOf="@id/iv_pencil"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_folder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="#EDE2E2"
        app:layout_constraintTop_toBottomOf="@id/iv_folder" />


</androidx.constraintlayout.widget.ConstraintLayout>

